<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionbarStyle">
        <item name="android:background">@color/actionbar_bg</item>
    </style>

    <style name="TextCommon">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/actionbar_indicator_color</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabBackground">@color/transparent</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/actionbar_tab_text_select</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/actionbar_tab_text_unselect</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
